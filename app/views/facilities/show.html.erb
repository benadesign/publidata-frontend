<div class="full-width bottom-border flex-center">
  <div class="container max-width margin-top-80 padding-top-15 padding-bottom-15">
    <div class="title" style="color: #f9b200;">Equipements</div>
  </div>
</div>

<div class="container max-width">

  <!-- row for social links : facebook, twitter, website, etc -->
  <div class="row social-row">
    <div class="col-xs-12">
      <div class="flex-center">
        <hr class="hr-left">
        <a class="social-item"><i class="fa fa-facebook"> 287</i></a>
        <hr>
        <a class="social-item"><i class="fa fa-twitter"> 287</i></a>
        <hr>
        <div class="social-pusher"></div>
        <hr>
        <a href="/" class="social-item">Site web</a>
        <hr class="hr-right">
      </div>
    </div>
  </div>

  <!-- header row with big picture and title -->
  <div class="row">
    <div class="col-xs-12">
      <div class="card">
        <div class="card-bg" style="background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5)), url(<%= image_path "img_facility.jpg" %>)">
          <div class="card-text">
            <h1>Maison de l'environnement</h1>
            <h3>Culture, environnement</h3>
            <p>Un équipement de la région Ile de France</p>
          </div>
          <div class="card-category">
            <%= image_tag "picto_sport_orange.png", class: "card-logo" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- row for  -->
  <div class="row margin-top-20 margin-bottom-20 flex-center flex-wrap">
    <div class="col-xs-12 col-sm-8">
      <p><%= @facility[:blurb] %></p>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <div class="contact-block flex-center">
        <i class="fa fa-phone"></i>
        <hr>
        <%= @facility[:tel].sub(/(\d{2})(\d{2})(\d{2})(\d{2})(\d{2})/, "\\1 \\2 \\3 \\4 \\5 ") %>
      </div>
      <div class="contact-block flex-center">
        <i class="fa fa-envelope"></i>
        <hr>
        <%= mail_to @facility[:mail], ("Contacter ").upcase %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 bottom-border"></div>
  </div>
  <div class="row sub-card-row margin-top-20 margin-bottom-20 flex-center">
    <div class="col-md-4">
      <div class="sub-card">
        <div id="map"></div>
      </div>
    </div>
    <hr>
    <div class="col-md-4">
      <div class="sub-card bg-orange">
      </div>
    </div>
    <hr>
    <div class="col-md-4">
      <div class="sub-card">
        <div class="sub-card-bg flex-center" style="background: url(<%= image_path "img_facility.jpg" %>)">
          <div class="sub-card-gradient"></div>
          <div class="sub-card-text"><p>8 images</p></div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 bottom-border"></div>
  </div>
</div>


